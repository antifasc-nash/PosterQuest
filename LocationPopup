import React from 'react';
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";
import { MapPin, CheckCircle, X, Star } from "lucide-react";
import { format } from "date-fns";

export default function LocationPopup({ location, onClose, onLogPoster, userEmail }) {
  const priorityColors = {
    high: "bg-red-100 text-red-800 border-red-200",
    medium: "bg-yellow-100 text-yellow-800 border-yellow-200",
    standard: "bg-blue-100 text-blue-800 border-blue-200"
  };

  const canLog = !location.claimed || location.claimed_by === userEmail;

  return (
    <div className="fixed inset-0 bg-black/50 flex items-end md:items-center justify-center z-[1000] p-4">
      <Card className="w-full max-w-md animate-in slide-in-from-bottom duration-300 md:animate-in md:fade-in">
        <CardHeader className="flex flex-row items-start justify-between space-y-0 pb-4">
          <div className="flex-1">
            <CardTitle className="flex items-center gap-2 text-lg">
              <MapPin className="w-5 h-5 text-blue-600" />
              Location Details
            </CardTitle>
          </div>
          <Button
            variant="ghost"
            size="icon"
            onClick={onClose}
            className="h-8 w-8"
          >
            <X className="w-4 h-4" />
          </Button>
        </CardHeader>
        <CardContent className="space-y-4">
          <div>
            <div className="font-semibold text-gray-900">{location.address}</div>
            <div className="text-sm text-gray-500 mt-1">{location.neighborhood}</div>
          </div>

          <div className="flex gap-2 flex-wrap">
            <Badge variant="outline" className={priorityColors[location.priority]}>
              {location.priority === 'high' && <Star className="w-3 h-3 mr-1" />}
              {location.priority.charAt(0).toUpperCase() + location.priority.slice(1)} Priority
            </Badge>
            <Badge variant="outline" className="bg-gray-100 text-gray-800">
              {location.location_type.replace(/_/g, ' ')}
            </Badge>
          </div>

          {location.claimed ? (
            <div className="bg-green-50 border border-green-200 rounded-lg p-3">
              <div className="flex items-center gap-2 text-green-700 font-medium">
                <CheckCircle className="w-4 h-4" />
 
